    <OS>LINUX</OS>
    <COMPILERS>intel</COMPILERS>
    <MPILIBS>impi</MPILIBS>
    <CIME_OUTPUT_ROOT>$ENV{HOME}/lus_scratch/cesm2/scratch</CIME_OUTPUT_ROOT>
    <DIN_LOC_ROOT>$ENV{HOME}/cesm2/inputdata</DIN_LOC_ROOT>
    <DIN_LOC_ROOT_CLMFORC>$ENV{HOME}/cesm2/ptclm-data</DIN_LOC_ROOT_CLMFORC>
    <DOUT_S_ROOT>$ENV{HOME}/lus_scratch/cesm2/archive/$CASE</DOUT_S_ROOT>
    <BASELINE_ROOT>$ENV{HOME}/cesm2/baselines</BASELINE_ROOT>
    <CCSM_CPRNC>$CIMEROOT/tools/cprnc/build/cprnc</CCSM_CPRNC>
    <GMAKE_J>8</GMAKE_J>
    <BATCH_SYSTEM>slurm</BATCH_SYSTEM>
    <SUPPORTED_BY>uh its-ci</SUPPORTED_BY>
    <MAX_TASKS_PER_NODE>39</MAX_TASKS_PER_NODE>
    <MAX_MPITASKS_PER_NODE>39</MAX_MPITASKS_PER_NODE>
    <PROJECT_REQUIRED>FALSE</PROJECT_REQUIRED>
    <mpirun mpilib="impi">
      <executable>srun</executable>
    </mpirun>
    <module_system type="module">
      <init_path lang="perl">/opt/ohpc/admin/lmod/lmod/init/perl</init_path>
      <init_path lang="python">/opt/ohpc/admin/lmod/lmod/init/env_modules_python.py</init_path>
      <init_path lang="sh">/opt/ohpc/admin/lmod/lmod/init/sh</init_path>
      <init_path lang="csh">/opt/ohpc/admin/lmod/lmod/init/csh</init_path>
      <cmd_path lang="perl">/opt/ohpc/admin/lmod/lmod/libexec/lmod perl</cmd_path>
      <cmd_path lang="python">/opt/ohpc/admin/lmod/lmod/libexec/lmod python</cmd_path>
      <cmd_path lang="sh">module</cmd_path>
      <cmd_path lang="csh">module</cmd_path>
      <modules>
        <command name="purge"></command>
        <command name="load">devel/CMake/3.15.3</command>
