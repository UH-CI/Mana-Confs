<?xml version="1.0"?>
<config_machines version="2.0">
  <machine MACH="mana_qdr">
    <DESC>20  cores on two sockets (10 cores/socket) , batch system is SLURM</DESC>
    <NODENAME_REGEX>.*</NODENAME_REGEX>
    <OS>LINUX</OS>

    <COMPILERS>intel</COMPILERS>
    <MPILIBS>impi</MPILIBS>
    <CIME_OUTPUT_ROOT>$ENV{HOME}/lus_scratch/cesm2/scratch</CIME_OUTPUT_ROOT>
    <DIN_LOC_ROOT>$ENV{HOME}/cesm2/inputdata</DIN_LOC_ROOT>
    <DIN_LOC_ROOT_CLMFORC>$ENV{HOME}/cesm2/ptclm-data</DIN_LOC_ROOT_CLMFORC>
    <DOUT_S_ROOT>$ENV{HOME}/lus_scratch/cesm2/archive/$CASE</DOUT_S_ROOT>
    <BASELINE_ROOT>$ENV{HOME}/cesm2/baselines</BASELINE_ROOT>
    <CCSM_CPRNC>$CIMEROOT/tools/cprnc/build/cprnc</CCSM_CPRNC>
    <GMAKE_J>8</GMAKE_J>
    <BATCH_SYSTEM>slurm</BATCH_SYSTEM>
    <SUPPORTED_BY>uh its-ci</SUPPORTED_BY>
    <MAX_TASKS_PER_NODE>19</MAX_TASKS_PER_NODE>
    <MAX_MPITASKS_PER_NODE>19</MAX_MPITASKS_PER_NODE>
    <PROJECT_REQUIRED>FALSE</PROJECT_REQUIRED>
    <mpirun mpilib="impi">
      <executable>srun</executable>
    </mpirun>
    <module_system type="module">
      <init_path lang="perl">/opt/ohpc/admin/lmod/lmod/init/perl</init_path>
      <init_path lang="python">/opt/ohpc/admin/lmod/lmod/init/env_modules_python.py</init_path>
      <init_path lang="sh">/opt/ohpc/admin/lmod/lmod/init/sh</init_path>
      <init_path lang="csh">/opt/ohpc/admin/lmod/lmod/init/csh</init_path>
      <cmd_path lang="perl">/opt/ohpc/admin/lmod/lmod/libexec/lmod perl</cmd_path>
      <cmd_path lang="python">/opt/ohpc/admin/lmod/lmod/libexec/lmod python</cmd_path>
      <cmd_path lang="sh">module</cmd_path>
      <cmd_path lang="csh">module</cmd_path>
      <modules>
        <command name="purge"></command>
        <command name="load">devel/CMake/3.15.3</command>
        <command name="load">toolchain/intel/2018.5.274</command>
        <command name="load">lang/Python/2.7.15-intel-2018.5.274</command>
        <command name="load">lang/Perl/5.28.1-GCCcore-6.3.0</command>
      </modules>
      <modules mpilib="impi">
        <command name="load">data/PnetCDF/1.9.0-intel-2018.5.274</command>
        <command name="load">data/netCDF-C++4/4.3.0-intel-2018.5.274</command>
        <command name="load">data/netCDF-Fortran/4.4.5-intel-2018.5.274</command>
        <command name="load">data/netCDF/4.6.2-intel-2018.5.274</command>
      </modules>
    </module_system>
    <environment_variables>
      <env name="OMP_STACKSIZE">256M</env>
      <env name="I_MPI_FABRICS">shm:ofi</env>
      <env name="I_MPI_PMI_LIBRARY">/lib64/libpmi.so</env>
      <env name="FI_PROVIDER">psm</env>
      <env name="FI_PSM_TAGGED_RMA">0</env>
      <env name="FI_PSM_AM_MSG">1</env>
      <env name="NETCDF_C_PATH">/opt/apps/software/data/netCDF/4.6.2-intel-2018.5.274</env>
      <env name="NETCDF_FORTRAN_PATH">/opt/apps/software/data/netCDF-Fortran/4.4.5-intel-2018.5.274</env>
      <env name="SLURM_OVERLAP">1</env>
    </environment_variables>
  </machine>
  
  <machine MACH="mana_hdr">
    <DESC>40  cores on two sockets (20 cores/socket) , batch system is SLURM</DESC>
