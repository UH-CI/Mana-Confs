        <command name="load">lang/Python/2.7.15-intel-2018.5.274</command>
        <command name="load">lang/Perl/5.28.1-GCCcore-6.3.0</command>
      </modules>
      <modules mpilib="impi">
        <command name="load">data/PnetCDF/1.9.0-intel-2018.5.274</command>
        <command name="load">data/netCDF-C++4/4.3.0-intel-2018.5.274</command>
        <command name="load">data/netCDF-Fortran/4.4.5-intel-2018.5.274</command>
        <command name="load">data/netCDF/4.6.2-intel-2018.5.274</command>
      </modules>
    </module_system>
    <environment_variables>
      <env name="OMP_STACKSIZE">256M</env>
      <!-- Alternate Fabric setup -->
      <!--<env name="I_MPI_FABRICS">shm:dapl</env> -->
      <env name="I_MPI_FABRICS">shm:ofi</env>
      <env name="I_MPI_PMI_LIBRARY">/lib64/libpmi.so</env>
      <env name="FI_PROVIDER">shm,verbs;ofi_rxm</env>
      <env name="FI_MR_CACHE_MONITOR">disabled</env>
      <env name="FI_VERBS_MR_CACHE_ENABLE">0</env>
      <env name="FI_VERBS_INLINE_SIZE">256</env>
      <env name="FI_UNIVERSE_SIZE">$ENV{SLURM_NTASKS}</env>
      <env name="FI_VERBS_IFACE">i</env>
      <env name="NETCDF_C_PATH">/opt/apps/software/data/netCDF/4.6.2-intel-2018.5.274</env>
      <env name="NETCDF_FORTRAN_PATH">/opt/apps/software/data/netCDF-Fortran/4.4.5-intel-2018.5.274</env>
      <env name="SLURM_OVERLAP">1</env>
    </environment_variables>
  </machine>
</config_machines>
